<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInputLayoutHint" parent="">
        <item name="android:textColorHint">@color/col_gris</item>
        <item name="colorControlNormal">@color/col_negrosolida</item>
        <item name="colorControlHighlight">@color/col_negrosolida</item>
        <item name="colorAccent">@color/col_negrosolida</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/col_naranja</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextLabel" parent="">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/col_gris</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/col_negrosolida</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/col_negrosolida</item>
        <item name="colorControlActivated">@color/col_negrosolida</item>
    </style>

</resources>