<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activitys.prestation_pokemon">


    <TextView
        android:id="@+id/TVPokemonNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seguisb"
        android:text="Pokemon"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/col_grisfuerte"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/IVPokemonFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        />


    <TextView
        android:id="@+id/TVdescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seguisb"
        android:text="Description"
        android:gravity="center"
        android:maxLines="6"
        android:textColor="@color/col_grisfuerte"
        android:textSize="18sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_misHabilidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        tools:listitem="@layout/item_habilidades">

    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>