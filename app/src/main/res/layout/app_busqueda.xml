<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp"
    android:background="@color/col_White"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/contenedor_busqueda"
        android:visibility="visible"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/busqueda"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/border_buscar"
            >

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_search"
                android:scaleType="centerInside"
                />


            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/escribir_busqueda"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textColor="@color/col_grisnuevo"
                android:background="@android:color/transparent"
                android:hint="Buscar "
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/col_grisnuevo"
                >
            </EditText>
        </LinearLayout>






    </LinearLayout>




</RelativeLayout>
